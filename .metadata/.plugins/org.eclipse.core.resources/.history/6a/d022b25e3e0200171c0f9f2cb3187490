
public class ThinCrust extends ExtraCharges{

	Pizza pizza;
	
	public ThinCrust(Pizza pizza){
		
		this.pizza = pizza;
		
	}
	@Override
	public String getDescription() {
		// TODO Auto-generated method stub
		return pizza.getDescription() + ", Thin Crust";
	}

	@Override
	public double cost() {
		// TODO Auto-generated method stub
		return pizza.cost();
	}
	
	

}
